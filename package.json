{
  "name": "personal-website-api-ts",
  "version": "1.0.0",
  "repository": {
    "url": "https://github.com/JakeCover/PersonalWebsite_Api"
  },
  "dependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.21",
    "@types/cors": "^2.8.9",
    "@types/body-parser": "^1.19.0",
    "@types/jest": "^26.0.20",
    "express": "^4.17.1",
    "typescript": "^4.1.3",
    "prettier": "^2.2.1",
    "lastfm": "^0.9.3",
    "cors": "^2.8.5",
    "body-parser": "^1.19.0",
    "supertest": "^6.1.1",
    "jest": "^26.4.4",
    "ts-jest": "^26.4.4"
  },
  "author": "Cobular",
  "license": "MIT",
  "main": "src/app.js",
  "scripts": {
    "build": "tsc -p .",
    "prestart": "npm run build",
    "start": "node ./dist/app.js",
    "test": "jsest"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always",
    "proseWrap": "always"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
